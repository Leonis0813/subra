netkeiba:
  base_url: 'https://db.netkeiba.com'

mysql:
  database: 'denebola'
  host: '<%= Chef::EncryptedDataBagItem.load('alterf', 'sakura')['ip_address'] %>'
  port: 3306
  user: 'root'
  password: '<%= Chef::EncryptedDataBagItem.load('alterf', 'mysql')['password'] %>'

analysis:
  feature:
    races: &races
      - 'direction'
      - 'distance'
      - 'grade'
      - 'month'
      - 'place'
      - 'round'
      - 'track'
      - 'weather'
    horses: &horses
      - 'age'
      - 'blank'
      - 'burden_weight'
      - 'distance_diff'
      - 'entry_times'
      - 'horse_average_prize_money'
      - 'last_race_order'
      - 'number'
      - 'rate_within_third'
      - 'running_style'
      - 'second_last_race_order'
      - 'sex'
      - 'weight'
      - 'weight_diff'
      - 'weight_per'
      - 'win_times'
    jockeys: &jockeys
      - 'jockey_average_prize_money'
      - 'jockey_win_rate'
      - 'jockey_win_rate_last_four_races'
  racewise_features:
    - 'burden_weight'
    - 'horse_average_prize_money'
    - 'rate_within_third'
    - 'weight'
    - 'weight_diff'
    - 'weight_per'
    - 'win_times'

prediction:
  tmp_file_name: &tmp_file_name 'test_data.yml'
  feature:
    races: *races
    horses: *horses
    jockeys: *jockeys

evaluation:
  tmp_file_name: *tmp_file_name
  race_list_filename: 'race_list.txt'
  feature:
    races: *races
    horses:
      - 'age'
      - 'blank'
      - 'burden_weight'
      - 'distance_diff'
      - 'entry_times'
      - 'horse_average_prize_money'
      - 'last_race_order'
      - 'number'
      - 'rate_within_third'
      - 'running_style'
      - 'second_last_race_order'
      - 'sex'
      - 'weight'
      - 'weight_diff'
      - 'weight_per'
      - 'win_times'
      - 'won'
    jockeys: *jockeys
