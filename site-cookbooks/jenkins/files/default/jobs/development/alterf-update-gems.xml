<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <jenkins.model.BuildDiscarderProperty>
      <strategy class="hudson.tasks.LogRotator">
        <daysToKeep>-1</daysToKeep>
        <numToKeep>10</numToKeep>
        <artifactDaysToKeep>-1</artifactDaysToKeep>
        <artifactNumToKeep>-1</artifactNumToKeep>
      </strategy>
    </jenkins.model.BuildDiscarderProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@3.9.1">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://github.com/Leonis0813/alterf.git</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>develop</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions/>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec>TZ=UTC
H 0 * * *</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>
        PATH=/usr/local/rvm/bin:/usr/bin:$PATH
        cd ${WORKSPACE}
        git checkout develop
        git reset HEAD .
        git checkout .
        set +e
        git branch -D update-gem
        set -e
        git pull
        set +e
        git branch update-gem
        set -e
        git checkout update-gem
        rvm 2.3.7 do bundle install --path=vendor/bundle
        rvm 2.3.7 do bundle update
        rvm 2.3.7 do bundle clean
        set +e
        git status -s | grep &apos;Gemfile.lock&apos;
        ret=$?
        set -e
        if [ $ret -eq 1 ] ; then
          echo &apos;No gems to update&apos;
          exit 0
        fi
        rvm 2.3.7 do bundle exec rspec --fail-fast spec/{models,controllers,views}
        git add Gemfile.lock
        git commit -m &apos;update Gemfile.lock&apos;
        cd ${JENKINS_HOME}/tools
        rvmsudo rvm 2.3.7 do ruby update_changelog.rb ${WORKSPACE}/CHANGELOG.md
        cd ${WORKSPACE}
        git add CHANGELOG.md
        git commit -m &apos;update CHANGELOG.md&apos;
        git push -f origin update-gem
        cd ${JENKINS_HOME}/tools
        rvmsudo rvm 2.3.7 do ruby create_pull_request.rb alterf
      </command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers>
    <hudson.plugins.ansicolor.AnsiColorBuildWrapper plugin="ansicolor@0.5.2">
      <colorMapName>xterm</colorMapName>
    </hudson.plugins.ansicolor.AnsiColorBuildWrapper>
  </buildWrappers>
</project>
